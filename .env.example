# =============================================================================
# SPEEDY FLEET MANAGEMENT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Example for local development:
DATABASE_URL="postgresql://speedy_user:speedy_password@localhost:5432/speedy_db"

# Example for Render PostgreSQL:
# DATABASE_URL="postgresql://speedy_user:password@dpg-xxxxx-a.oregon-postgres.render.com/speedy_db"

# =============================================================================
# WHATSAPP API CONFIGURATION
# =============================================================================
# WhatsApp API provider (Twilio/360Dialog)
WHATSAPP_API_URL="https://api.twilio.com/2010-04-01"

# Twilio credentials
WHATSAPP_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
WHATSAPP_AUTH_TOKEN="your_twilio_auth_token_here"

# WhatsApp business phone number (E.164 format)
WHATSAPP_PHONE_NUMBER="+972501234567"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Webhook verification token (generate a secure random string)
WEBHOOK_SECRET="your_secure_webhook_secret_here"

# JWT secret for authentication (if needed in future)
JWT_SECRET="your_jwt_secret_here"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=""

# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable rate limiting
ENABLE_RATE_LIMITING=true

# Maximum requests per minute per IP
MAX_REQUESTS_PER_MINUTE=20

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL in seconds (300 = 5 minutes)
CACHE_TTL_SECONDS=300

# Maximum items in cache
CACHE_MAX_ITEMS=100

# =============================================================================
# CONVERSATION SETTINGS
# =============================================================================
# Conversation timeout in minutes (30 = 30 minutes)
CONVERSATION_TIMEOUT_MINUTES=30

# =============================================================================
# DEVELOPMENT SETTINGS (development only)
# =============================================================================
# Enable Prisma Studio access
PRISMA_STUDIO_PORT=5555

# Enable debug logging
DEBUG_SQL=false

# =============================================================================
# PRODUCTION SETTINGS (production only)
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="https://yourdomain.com,https://api.yourdomain.com"

# Enable HTTPS redirect
FORCE_HTTPS=true

# =============================================================================
# RENDER DEPLOYMENT SETTINGS
# =============================================================================
# These are automatically set by Render, but can be overridden
# RENDER_SERVICE_NAME=""
# RENDER_SERVICE_ID=""
# RENDER_EXTERNAL_URL=""
